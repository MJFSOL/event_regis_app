<div class="event-edit-nav">
  <% if current_user.role == "admin" %>
    <%= link_to "Dashboard", admin_dashboard_page_path, class: "event-edit-nav-link" %>
  <% else %>
    <%= link_to "Dashboard", user_dashboard_page_path, class: "event-edit-nav-link" %>
  <% end %>
</div>
<div class="event-edit-container">
  <div class="event-edit-card">
    <h1 class="event-edit-header">Event Details</h1>
    <%= form_with(model: @event, local: true) do |form| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="event-edit-form-group">
        <%= form.label :event_name, "Event Name", class: "event-edit-form-label" %>
        <%= form.text_field :event_name, class: "event-edit-form-input" %>
      </div>
      <div class="event-edit-form-group">
        <%= form.label :date, "Date", class: "event-edit-form-label" %>
        <%= form.date_field :date, class: "event-edit-form-input" %>
      </div>
      <div class="event-edit-form-group">
        <%= form.label :location, "Location", class: "event-edit-form-label" %>
        <%= form.text_field :location, class: "event-edit-form-input" %>
      </div>
      <div class="event-edit-form-group">
        <%= form.label :description, "Description", class: "event-edit-form-label" %>
        <%= form.text_area :description, class: "event-edit-form-input event-edit-form-textarea" %>
      </div>
      <div class="event-edit-form-actions">
        <%= form.submit "Save Changes", class: "event-edit-btn event-edit-btn-primary" %>
        <%= link_to "Cancel", @event, class: "event-edit-btn event-edit-btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>