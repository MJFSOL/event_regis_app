<nav class="show-nav">
    <% if current_user.role == "admin" %>
      <%= link_to "Admin Dashboard", admin_dashboard_page_path, class: "nav-link" %>
    <% else %>
      <%= link_to "User Dashboard", user_dashboard_page_path, class: "nav-link" %>
    <% end %>
  </nav>
<div class="container-show">
  <div class="card">
    <div class="card-header">
      <svg xmlns="http://www.w3.org/2000/svg" class="card-header-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m-5.463 3.463A9 9 0 1112 3a9 9 0 010 18zM12 21a9 9 0 100-18 9 9 0 000 18z" />
      </svg>
      <h2 class="card-header-title"><%= @event.event_name%></h2>
    </div>
    <div class="details-grid">
      <div class="details-item">
        <svg xmlns="http://www.w3.org/2000/svg" class="details-item-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 15h14M5 19h14M5 7h14a2 2 0 012 2v10a2 2 0 01-2 2H5a2 2 0 01-2-2V9a2 2 0 012-2z" />
        </svg>
        <p><%= @event.date %></p>
      </div>
      <div class="details-item">
        <svg xmlns="http://www.w3.org/2000/svg" class="details-item-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657A8 8 0 016.343 5.343a8 8 0 0111.314 11.314zM12 11h.01M12 15h.01M12 18h.01M12 21a9 9 0 100-18 9 9 0 000 18z" />
        </svg>
        <p><%= @event.location %></p>
      </div>
    </div>
    <p class="description"><%= @event.description %></p>
  </div>

  <div class="card">
    <div class="card-header">
      <h2 class="card-header-title">Registrations (<%= @registrations.count %>)</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="registrations-table">
        <thead>
          <tr>
            <th>Attendee Name</th>
            <th>Email</th>
            <th style="text-align: right;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @registrations.each do |registration| %>
            <% if registration.persisted? %>
              <tr>
                <td><%= registration.attendee_name %></td>
                <td><%= registration.attendee_email %></td>
                <td style="text-align: right;">
                  <div class="actions">
                    <%= link_to edit_event_registration_path(@event, registration), class: "action-link" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="action-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-7-9l5 5L14 12l5-5-5-5-5 5z" />
                      </svg>
                    <% end %>
                    <%= button_to event_registration_path(@event, registration), method: :delete, data: { confirm: 'Are you sure?' }, class: "action-link" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="action-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1H9a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <svg xmlns="http://www.w3.org/2000/svg" class="card-header-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6M12 21a9 9 0 100-18 9 9 0 000 18z" />
      </svg>
      <h2 class="card-header-title">Add Registration</h2>
    </div>
    <%= form_with(model: [@event, @registration], local: true) do |form| %>
      <div class="form-grid">
        <div class="form-group">
          <%= form.label :attendee_name, class: "form-label" %>
          <%= form.text_field :attendee_name, class: "form-input", placeholder: "Enter attendee name" %>
        </div>
        <div class="form-group">
          <%= form.label :attendee_email, class: "form-label" %>
          <%= form.email_field :attendee_email, class: "form-input", placeholder: "Enter attendee email" %>
        </div>
      </div>
      <div style="margin-top: 1.5rem;">
        <%= form.submit "Add Attendee", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>