<div class="edit-container">
  <div class="edit-card">
    <h1 class="edit-header">Registration Details</h1>

    <%= form_with(model: [@event, @registration], local: true) do |form| %>
      <% if @registration.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>
          <ul>
            <% @registration.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="edit-form-group">
        <%= form.label :attendee_name, class: "edit-form-label" %>
        <%= form.text_field :attendee_name, class: "edit-form-input" %>
      </div>

      <div class="edit-form-group">
        <%= form.label :attendee_email, class: "edit-form-label" %>
        <%= form.email_field :attendee_email, class: "edit-form-input" %>
      </div>

      <div class="edit-form-actions">
        <%= form.submit "Save Changes", class: "edit-btn edit-btn-primary" %>
        <%= link_to "Cancel", @event, class: "edit-btn edit-btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>