<div class="admin-dashboard-container">
  <div class="admin-header">
    <h1 class="admin-header-title">Admin Dashboard</h1>
    <%= button_to "Logout", auth_logout_path, method: :delete, class: "admin-logout-btn" %>
  </div>

  <div class="admin-stats-container">
    <div class="admin-stat-card">
      <h2>Total Events</h2>
      <p><%= @total_events %></p>
    </div>
    <div class="admin-stat-card">
      <h2>Total Registrations</h2>
      <p><%= @total_registration %></p>
    </div>
  </div>

  <hr style="border: 1px solid #e5e7eb; margin: 2rem 0;">

  <div>
    <h2 class="admin-tools-title">Admin Tools</h2>
    <ul class="admin-tools-list">
      <li><%= link_to 'Manage Events', admin_events_path, class: "admin-tools-link" %></li>
      <li><%= link_to 'Manage Registrations', admin_registrations_path, class: "admin-tools-link" %></li>
    </ul>
  </div>
</div>