<div class="admin-events-container">
  <div class="admin-events-header">
    <h1 class="admin-events-header-title">Manage All Events</h1>
    <%= link_to "Admin Dashboard", admin_dashboard_page_path, class: "admin-events-dashboard-link" %>
  </div>

  <%= form_tag admin_events_path, method: :get, class: "admin-events-search-form" do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search by name or location", class: "admin-events-search-input" %>
    <%= submit_tag "Search", class: "admin-events-search-btn" %>
  <% end %>

  <div class="admin-events-table-card">
    <%= form_with url: bulk_delete_admin_events_path, method: :delete, data: { turbo: false } do |form| %>
      <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>
      <table class="admin-events-table">
        <thead>
          <tr>
            <th><input type="checkbox" id="select_all"></th>
            <th>Name</th>
            <th>Date</th>
            <th>Location</th>
            <th>Creator</th>
            <th>Registrations</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= check_box_tag 'event_ids[]', event.id %></td>
              <td><%= event.event_name %></td>
              <td><%= event.date %></td>
              <td><%= event.location %></td>
              <td><%= event.user.email %></td>
              <td><%= event.registrations.count %></td>
              <td>
                <div class="admin-events-table-actions">
                  <%= link_to 'View', event_path(event) %>
                  <%= link_to 'Edit', edit_event_path(event) %>
                  <%= button_to 'Delete', event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= submit_tag "Delete Selected Events", class: "admin-events-bulk-delete-btn" %>
    <% end %>
  </div>
</div>

<script>
  document.getElementById('select_all').addEventListener('change', function() {
    document.querySelectorAll('input[type="checkbox"][name="event_ids[]"]').forEach(checkbox => {
      checkbox.checked = this.checked;
    });
  });
</script>